<!doctype html>
<html>
<head>
    <title>Researchify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <% if(user.local.userType ==="researcher"){ %>
    <div class="container">

        <div class="page-header text-center">
            <h1></span> Researcher's Feed</h1>
            
        </div>

        <div class="row">

            <!-- LOCAL INFORMATION -->
            <div class="col-sm-6">
                <div class="well">
                    <h3>Your Profile</h3>
                    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
                    <% if (user.local.email) { %>
                        <p class="hidden">
                            <strong>id</strong>: <%= user._id %><br>
                            <strong>email</strong>: <%= user.local.email %><br>
                            <strong>password</strong>: <%= user.local.password %>
                        </p>
                        <a href="/createStudy" class=" btn btn-default">Create Study</a>
                        <a href="/unlink/local" class=" hidden btn btn-default">Unlink</a>
                    <% } else { %>
                        <a href="/connect/local" class=" hidden btn btn-default">Connect Local</a>
                    <% } %>

                </div>
            </div>
            <div class="col-sm-6">
              <h3>Your Studies</h3>
            
              
                    <div class="card-group" style="width: 18rem;">
                      <% for(let i=0; i<studies.length; i++) {%>
                      <div class="card-body">
                        <span class="hidden"><%= studies[i]._id %></span>
                        <h4 class="card-title"><%= studies[i].title %></h4>
                        <h5 class="card-subtitle mb-2 text-muted"><%= studies[i].type %></h5>
                        <p class="card-text"><%= studies[i].description %></p>
                        <span><a href="/editStudy/<%= studies[i]._id %>" class="card-link"><i class="fa fa-pencil" aria-hidden="true"></i></a></span>
                        <span><i class="fa fa-ban" aria-hidden="true"></i></span>
                      </div>
                    </div>
                  </li>
              <% } %>
              

            </div>
            
    </div>

<% } %>

<script src="main.js"></script>

</body>
</html>
