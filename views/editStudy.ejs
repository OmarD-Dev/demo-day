<!doctype html>
<html>
<head>
    <title>Researchify</title>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/nav.ejs') %>
<div class="container">
    <div class="page-header text-center">
        <h1>Edit Your Study</h1>
    </div>

    <div class="row">
        <div class="col">

          <h2>Edits</h2>
        <% if (user.local.email) { %>
          <% for(let i=0; i<study.length; i++) {%>
          <!-- using method overide package to overide the post route as a put. The query overides post-->
          <form action="/editStudy/<%= study[i]._id %>?_method=PUT" method="POST">
            <input  type="text" value="<%= user._id %>" name="researcherId" hidden>
            <label for="name">Researcher's name</label>
            <input class="form-control" type="text" value="<%= study[i].name %>" name="name">
            <label class="form-label" for="title">Title of Your Study</label>
            <input class="form-control" type="text" value="<%= study[i].title %>"placeholder="Title of Study" name="title">
            <label class="form-label"for="type">Type of Study</label>
            <input class="form-control"  type="text" value="<%= study[i].type %>"placeholder="Study type" name="type">
            <label class="form-label" for="description">Description of Your Study</label>
            <textarea class="form-control" name="description" id="description" cols="30" rows="10"><%= study[i].description %></textarea>
            <label class="form-label" for="IRB Consent">Participant Consent</label>
            <textarea class="form-control" name="consent" id="consent" cols="30" rows="10">Include your consent specifications here.</textarea>
            <button >Submit</button>
          </form>
        </div>
          <% } %>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
 